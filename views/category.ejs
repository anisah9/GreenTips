<!DOCTYPE html>
<html>
  <head>
    <title><%= category %> Tips</title>
    <link rel="stylesheet" type="text/css" href="main.css" />
    <style>
      /* Paste the provided CSS here */
      body {
        font-family: "Arial", sans-serif;
        margin: 0;
        padding: 0;
      }

      h1 {
        color: #c8a2c8; /* Pastel Purple color */
        text-align: center;
      }

      a.back-btn {
        text-decoration: none;
        color: #c8a2c8;
        display: block;
        margin-top: 10px;
        margin-bottom: 20px;
      }

      /* Tip styles */
      div {
        border: 1px solid #ddd;
        padding: 15px;
        margin-bottom: 20px;
      }

      h3 {
        color: #c8a2c8; /* Pastel Purple color for tip category */
        margin-bottom: 5px;
      }

      p {
        color: #333; /* Dark gray color for tip text */
        margin-bottom: 10px;
      }

      a {
        text-decoration: none;
        color: #c8a2c8;
      }

      a:hover {
        text-decoration: underline;
      }

      p.submitted-by {
        margin-top: 10px;
        color: #777; /* Light gray color for user details */
      }

      /* Date and time styles */
      p.created-at {
        color: #777; /* Light gray color for date and time */
      }

      /* Upvote button styles */
      form {
        display: inline-block;
      }

      button.upvote-btn {
        background-color: #c8a2c8; /* Pastel Purple color */
        color: #fff;
        padding: 8px 15px;
        border: none;
        cursor: pointer;
        margin-right: 10px;
      }

      button.upvote-btn:hover {
        background-color: #b08eb0; /* Darker pastel purple color on hover */
      }
    </style>
  </head>
  <body>
    <a href="javascript:void(0);" class="back-btn" onclick="goBack()">Back</a>
    <h1><%= category %> Eco-Friendly Tips</h1>

    <!-- Display tips retrieved from the database for the specified category -->
    <% for (let tip of tips) { %>
    <div>
      <!-- Display tip details -->
      <h3><%= tip.category %></h3>
      <p><%= tip.text %></p>

      <!-- Check if there is a link -->
      <% if (tip.link) { %>
      <a href="<%= tip.link %>" target="_blank">Read more</a>
      <% } %>

      <!-- Display the name of the user -->
      <p class="submitted-by">Submitted by: <%= tip.username %></p>

      <!-- Display the date and time of submission -->
      <p class="created-at">Created at: <%= tip.created_at %></p>

      <form action="/upvote/<%= tip.id %>" method="post">
        <button class="upvote-btn" type="submit">Upvote</button>
      </form>
      <p>Upvotes: <%= tip.upvotes %></p>
    </div>
    <% } %>
    <script>
      function goBack() {
        window.history.back();
      }
    </script>
  </body>
</html>
